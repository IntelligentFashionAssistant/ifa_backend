@model ifa_front.Models.Property

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-success">Create Property</h1>


<hr />
<div class="row">
        <form asp-action="Create" class="w-100 m-auto" method = "post">
           <div class="row">
               <div class="col-6">
                   <div class="form-group mb-2">
                     <label asp-for="Name" class="control-label"></label>
                     <input asp-for="Name" class="form-control" />
                     <span asp-validation-for="Name" class="text-danger"></span>
                   </div>
                   <div class="form-group mb-2">
                     <label asp-for="Description" class="control-label"></label>
                     <input asp-for="Description" class="form-control" />
                     <span asp-validation-for="Description" class="text-danger"></span>
                   </div>
               </div>
               <div class="col-6">
                    <div class="form-group mb-2">
                     <label  for="inputGroupSelect01">Category</label>
                       <select asp-for="CategoryId"  class="form-control"  onchange="document.getElementById('btnSubmit').click()">
                       <option value ="" disabled selected>Choose Category</option>
                       @foreach( var i in Model.Categories)
                       {
                           <option value =@i.Id>@i.Name</option>
                        }
                       </select>
                   </div>
                    
                      @if ((Model.Groups != null) && Model.Groups.Any())
                     {
                         <div class="form-group mb-2">
                         <label  for="inputGroupSelect01">Group</label>
                         <select asp-for="GroupId"  class="form-control"  >
                        <option value ="" disabled selected>Choose Group</option>
                       @foreach( var i in Model.Groups)
                      {
                           <option value =@i.Id>@i.Name</option>
                     }
                          </select>
                        </div>
                      }
               </div>
               <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" />
            </div>
           </div>
           
        </form>
</div>





@section Scripts{ 
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
